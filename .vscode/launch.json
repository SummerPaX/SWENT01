{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build and debug active C/C++ file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "windows": {
        "MIMode": "gdb",
        "miDebuggerPath": "gdb",
      },
      "osx": {
        "MIMode": "lldb"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "gcc.exe build active file"
    }
  ]
}